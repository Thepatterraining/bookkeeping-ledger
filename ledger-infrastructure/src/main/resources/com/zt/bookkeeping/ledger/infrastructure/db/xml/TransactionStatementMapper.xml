<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zt.bookkeeping.ledger.infrastructure.db.TransactionStatementMapper">

    <!-- 基础结果映射 -->
    <resultMap id="BaseResultMap" type="com.zt.bookkeeping.ledger.infrastructure.db.entity.TransactionStatementPO">
        <id column="id" property="id"/>
        <result column="transaction_statement_no" property="transactionStatementNo"/>
        <result column="ledger_no" property="ledgerNo"/>
        <result column="amount" property="amount"/>
        <result column="transaction_type" property="transactionType"/>
        <result column="transaction_desc" property="transactionDesc"/>
        <result column="transaction_status" property="transactionStatus"/>
        <result column="transaction_time" property="transactionTime"/>
        <result column="category_no" property="categoryNo"/>
        <result column="category_name" property="categoryName"/>
        <result column="category_type" property="categoryType"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="is_deleted" property="isDeleted"/>
    </resultMap>

    <!-- 获取指定账本特定类型交易的总金额 -->
    <select id="getSummaryAmount" resultType="java.lang.Long">
        SELECT IFNULL(SUM(amount), 0)
        FROM transaction_statement
        WHERE ledger_no = #{ledgerNo}
        AND transaction_type = #{type}
        AND is_deleted = 0
    </select>

</mapper>

